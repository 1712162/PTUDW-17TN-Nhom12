<%- include("../partials/header") %>
<main>
  <div class="banner">
    <img src="/assets/img/dicuss.jpg">
    <div class="banner-text">
      <h1>Study with your study groups</h1>
      <p>Ready to connect with people</p>
    </div>
  </div>
  <div class="mt-5 container">
    <div class="input-group">
      <input class="form-control p-4 py-2 rounded-pill mr-1 pr-5"
        type="text" placeholder="Hundreds of study groups waiting for you to join">
      <span class="input-group-append">
        <button class="btn rounded-pill border-0 ml-n5" type="button">
          <i class="fa fa-search"></i>
        </button>
      </span>
    </div>
    <div class="mt-3 d-flex flex-row justify-content-around font-weight-bold
      filter">
      <li>Newest</li>
      <li>Oldest</li>
      <li>Most stars</li>
      <li>Alphabet</li>
    </div>
  </div>
  <div class="container-fluid">
    <div class="groups-list mb-3">
      <% groups.map(group => { %>
        <div class="card my-5">
          <div class="row no-gutters">
            <div class="col-md-4 pb-none">
              <div class="p-3">
                <img src="/assets/img/default.jpg" class="card-img-top"
                  alt="...">
                <button class="btn btn-warning text-light w-100 rounded-0 mt-2
                  font-weight-bold gotochat"><i class="fa fa-paper-plane
                    mr-1"></i>Go to group</button>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h3 class="card-title font-weight-bold text-warning"><%= group.group_name %></h3>
                <p class="card-text"><strong>Description</strong> <%= group.description %></p>
                <p class="card-text"><strong>Owner</strong></p>
                <p class="card-text"><strong>Members</strong> <span><%= group.members.length %></span></p>
                <p class="card-text"><strong>Created date</strong> <span><%= group.created_at.toLocaleDateString('en-CA') %></span></p>
                <p class="card-text"><strong>Star</strong> <span><%= group.stars %></span></p>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</main>
<%- include("../partials/footer") %>
