<%- include("../partials/header") %>
<main>
  <div class="mt-5 container">
      <header>
          <h1 class="title">CREATE YOUR STUDY GROUPS</h1>
          <%- include("../partials/filter") %>
      </header>
  </div>
  <div id="build" class="container-fluid">
    <button id="createButt" class="btn btn-warning rounded
    text-light"><i class="fa fa-plus-circle"></i> New group</button>
    <div class="modal fade" id="createForm" tabindex="-1"
        role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <button type="button" class="close text-right
                    pr-1" data-dismiss="modal"
                    aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <form action="/groups/build" method="POST">
                    <div class="modal-body px-3">
                        <div class="form-group">
                            <label for="input-title">Title</label>
                            <input type="text"
                                class="form-control"
                                name="group[group_name]"
                                id="input-title"/>
                        </div>
                        <div class="form-group">
                            <label for="input-des">Description</label>
                            <textarea id="input-des"
                                name="group[description]"
                                class="form-control"></textarea>
                        </div>
                        <div class="form-group row">
                            <label for="input-number"
                                class="col-sm-5 col-form-label">Maximum
                                members</label>
                            <div class="col-sm-3">
                                <input type="number"
                                    class="form-control"
                                    name="group[max_number]"
                                    id="input-number"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control
                                custom-checkbox">
                                <input type="checkbox"
                                    name="group[view_mode]"
                                    class="custom-control-input"
                                    id="customCheck1">
                                <label
                                    class="custom-control-label"
                                    for="customCheck1">Make this
                                    group private</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="input-file">Cover image</label>
                            <input type="file"
                                name="group[cover_image]"
                                class="form-control-file"
                                id="input-file"/>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-warning
                            text-light">Create</button>
                        <button type="button" class="btn
                            btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="groups my-4">
      <% if (groups.length == 0) { %>
        <%- include("../partials/empty") %>
        <% } else { %>
      <div class="row">
        <% groups.map(group => { %>
            <div class="mt-3 col-sm-6 col-lg-3">
              <div class="card" id="<%= group._id %>">
                  <img src="<%= group.cover_image %>"
                      class="card-img-top" alt="course-img">
                  <div class="card-body">
                      <h4 class="card-title"> <%= group.group_name %></h4>
                      <p><i class="fa fa-users"></i> <span> <%= group.members.length %></span>
                          members</p>
                      <p><i class="fa fa-history"></i> <%= group.created_at.toLocaleDateString('en-CA') %></p>
                      <p class="mb-0"><i class="fa fa-star"></i> <%= group.stars %></p>
                  </div>
              </div>
            </div>
        <% }) %>
      </div>
      <% } %>
    </div>
  </div>
</main>
<%- include("../partials/footer") %>
