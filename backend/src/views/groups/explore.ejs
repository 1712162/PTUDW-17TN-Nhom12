<%- include("../partials/header") %>
<main>
  <div class="banner">
      <img src="/assets/img/explore.jpg">
      <div class="banner-text">
          <h1>Explore amazing study groups</h1>
          <p>Expand your knowlege and meet your future study buddies</p>
      </div>
  </div>
  <div class="mt-5 container">
      <div class="input-group">
          <input class="form-control p-4 py-2 rounded-pill mr-1 pr-5"
              type="text"
              placeholder="Hundreds of study groups waiting for you to join">
          <span class="input-group-append">
              <button class="btn rounded-pill border-0 ml-n5"
                  type="button">
                  <i class="fa fa-search"></i>
              </button>
          </span>
      </div>
      <div class="mt-3 d-flex flex-row justify-content-around
          font-weight-bold filter">
          <li>Newest</li>
          <li>Oldest</li>
          <li>Most stars</li>
          <li>Alphabet</li>
      </div>
  </div>
</main>

