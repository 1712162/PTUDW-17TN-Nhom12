<%- include("../partials/header") %>
<main>
  <div class="banner">
      <img src="/assets/img/explore.jpg">
      <div class="banner-text">
          <h1>Explore amazing study groups</h1>
          <p>Expand your knowlege and meet your future study buddies</p>
      </div>
  </div>
  <div class="mt-5 container">
    <%- include("../partials/filter") %>
  </div>
  <% if (groups.length == 0) { %>
    <%- include("../partials/empty") %>
    <% } else { %>
        <div id="index" class="container-fluid">
            <div class="groups my-4">
            <div class="row">
                <% groups.map(group => { %>
                    <div class="mt-3 col-sm-6 col-lg-3">
                    <div class="card" id="<%= group._id %>">
                        <img src="<%= group.cover_image %>"
                            class="card-img-top" alt="course-img">
                        <div class="card-body">
                            <h4 class="card-title"> <%= group.group_name %></h4>
                            <p><i class="fa fa-users"></i> <span> <%= group.members.length %></span>
                                members</p>
                            <p><i class="fa fa-history"></i> <%= group.created_at.toLocaleDateString('en-CA') %></p>
                            <p class="mb-0"><i class="fa fa-star"></i> <%= group.stars %></p>
                        </div>
                    </div>
                    </div>
                <% }) %>
            </div>
            </div>
        </div>
    <% } %>
</main>

<%- include("../partials/footer") %>
